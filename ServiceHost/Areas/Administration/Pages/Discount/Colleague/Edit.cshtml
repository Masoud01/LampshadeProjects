@model DiscountManagement.Application.Contract.ColleagueDiscount.EditColleagueDiscount
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش تخفیف | @Model.Product</h4>
</div>


<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-12">
                <label asp-for="ProductId" class="control-label">محصول</label>
                <select asp-for="ProductId" class="form-control" asp-items='new SelectList(Model.Product,"Id","Name")'>
                    <option value="0"> محصول را انتخب کنید</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="DiscountRate" class="control-label">درصد تخفیف</label>
                    <input asp-for="DiscountRate" type="text" class="form-control" >
                    <input type="hidden" value="@Model.Id" asp-for="Id"/>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>