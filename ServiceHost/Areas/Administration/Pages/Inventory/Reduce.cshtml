@model InventoryManagement.Application.Contract.Inventory.ReduceInventory
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">کاهش موجودی </h4>
</div>


<form asp-page="./Index" asp-page-handler="Reduce"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Count" class="control-label">چه تعداد</label>
                    <input asp-for="Count" type="text" class="form-control">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description" class="control-label">به چه دلیل</label>
                    <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="InventoryId" value="@Model.InventoryId" />
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">افزایش انبار</button>
    </div>
</form>